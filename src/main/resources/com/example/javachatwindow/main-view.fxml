<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="BOTTOM_RIGHT" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javachatwindow.ChatController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="chatArea" VBox.vgrow="ALWAYS"/>
    <HBox spacing="20">
    <TextField fx:id="chatInput" HBox.hgrow="ALWAYS"/>
        <Button text="Отправить" defaultButton="true" onAction="#clickSentButton"/>
    </HBox>
</VBox>
